{
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2020",
    "tsBuildInfoFile": "./.tsbuildinfo",
    "types": [
      "node",
      "vitest/globals"
    ]
  },
  "exclude": [
    "coverage/",
    "dist/",
    "docs/",
    "tests/**",
    "test/types/**"
  ],
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "eslint.config.ts",
    "rollup.config.ts",
    "vitest.config.ts"
  ]
}
